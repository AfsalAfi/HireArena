{
    "compilerOptions": {
      "target": "ES2021",              // Target ECMAScript version
      "module": "commonjs",            // Module system
      "strict": true,                  // Enable all strict type-checking options
      "esModuleInterop": true,         // Enable compatibility with ES modules
      "skipLibCheck": true,            // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
      "outDir": "./dist",              // Output directory for compiled files
      "rootDir": "./",                 // Root directory for your source code
      "baseUrl": ".",                  // Base URL for module resolution
      "paths": {
        "*": ["node_modules/*"]        // Module resolution fallback to node_modules
      }
    },
    "include": [
      "gateway-service/**/*.ts", "notification-service/src/a.ts", "gateway-service/src/app.ts",       // Include all .ts files in the gateway service
    ],
    "exclude": [
      "node_modules",                  // Exclude node_modules folder
      "dist"                           // Exclude the output directory
    ]
  }
  